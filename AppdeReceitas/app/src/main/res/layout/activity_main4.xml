<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtNomeReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:text="Nome Receita"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/txtIngredientes"
                android:layout_width="match_parent"
                android:layout_height="445dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:justificationMode="inter_word"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur malesuada elit neque, in rhoncus velit porttitor lobortis. Sed tempor nibh in sem tempus, a faucibus urna ornare. Cras porttitor quis velit a consequat. Proin viverra libero sed ipsum tincidunt molestie. Integer dapibus sem sit amet tincidunt varius. Pellentesque malesuada leo a quam efficitur condimentum. Maecenas lectus nunc, consectetur sodales nibh ut, pretium faucibus dolor. In hac habitasse platea dictumst. Nunc quis blandit sem. In pellentesque, tellus a pellentesque convallis, nunc elit euismod lectus, vel viverra lacus eros a dolor. Sed non interdum metus, ut rhoncus ante."
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtInstrucoes"
                android:layout_width="match_parent"
                android:layout_height="445dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:justificationMode="inter_word"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur malesuada elit neque, in rhoncus velit porttitor lobortis. Sed tempor nibh in sem tempus, a faucibus urna ornare. Cras porttitor quis velit a consequat. Proin viverra libero sed ipsum tincidunt molestie. Integer dapibus sem sit amet tincidunt varius. Pellentesque malesuada leo a quam efficitur condimentum. Maecenas lectus nunc, consectetur sodales nibh ut, pretium faucibus dolor. In hac habitasse platea dictumst. Nunc quis blandit sem. In pellentesque, tellus a pellentesque convallis, nunc elit euismod lectus, vel viverra lacus eros a dolor. Sed non interdum metus, ut rhoncus ante."
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnVoltarMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Voltar Menu"
                android:onClick="VoltarMenu" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>